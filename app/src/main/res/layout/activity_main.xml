<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="42dp">

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="43dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/seekBar"
            android:layout_marginTop="105dp"
            app:srcCompat="@drawable/batman1"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/tiempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="453dp"
            android:text="0:30"
            android:textColor="#A00606"
            android:textColorHighlight="#A00606"
            android:textColorHint="#A00606"
            android:textColorLink="#A00606"
            android:textSize="90dp" />

        <Button
            android:id="@+id/boton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="357dp"
            android:layout_marginEnd="160dp"
            android:layout_marginRight="160dp"
            android:onClick="iniciarTiempo"
            android:text="Iniciar!" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>